<h1>Task#index</h1>

<%=link_to 'New Task', new_task_path%>

<% @tasks.each do |task| %>
  <%=link_to task.name, task_path(task) %>
  <p><%=  task.description %></p>
  <%=link_to 'edit', edit_task_path(task) %>
  <%=link_to 'delete', task_path(task),
  method: 'delete', data: {confirm: 'Are you sure ?'} %>
<% end %>

